{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/controllers/*": ["./controllers/*"],
      "@/routes/*": ["./routes/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": [
    "**/*.js",
    "controllers/**/*",
    "routes/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "generated"
  ]
}
